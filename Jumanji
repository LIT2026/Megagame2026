<script>
// Memory Game
const board = document.getElementById("board");
const letter = document.getElementById("letter");
const jungle = document.getElementById("jungle");
let cardsArray = [
  'ðŸ¦','ðŸ','ðŸ˜','ðŸ¦','ðŸ¦','ðŸ','ðŸ˜','ðŸ¦'
];
let firstCard = null, secondCard = null;
let lockBoard = false;

function shuffle(array){ return array.sort(()=>0.5-Math.random()); }

function createBoard(){
  board.innerHTML = '';
  shuffle(cardsArray).forEach(symbol=>{
    const card = document.createElement('div');
    card.className='card';
    card.innerHTML=`
      <div class="card-inner">
        <div class="card-front"></div>
        <div class="card-back">${symbol}</div>
      </div>`;
    card.addEventListener('click',flipCard);
    board.appendChild(card);
  });
}

function flipCard(){
  if(lockBoard || this===firstCard) return;
  this.classList.add('flipped');
  if(!firstCard){
    firstCard=this;
  }else{
    secondCard=this;
    checkMatch();
  }
}

function checkMatch(){
  const firstSymbol=firstCard.querySelector('.card-back').textContent;
  const secondSymbol=secondCard.querySelector('.card-back').textContent;
  if(firstSymbol===secondSymbol){
    firstCard.removeEventListener('click',flipCard);
    secondCard.removeEventListener('click',flipCard);
    firstCard=null; secondCard=null;
    checkWin();
  }else{
    lockBoard=true;
    setTimeout(()=>{
      firstCard.classList.remove('flipped');
      secondCard.classList.remove('flipped');
      firstCard=null; secondCard=null; lockBoard=false;
    },1000);
  }
}

function checkWin(){
  const flipped=board.querySelectorAll('.card.flipped');
  if(flipped.length===cardsArray.length){
    // Show Jumanji winner images
    board.innerHTML='';
    ['Dwayne Johnson','Kevin Hart','Jack Black','Karen Gillan'].forEach(name=>{
      const img=document.createElement('div');
      img.style.background=`url('https://upload.wikimedia.org/wikipedia/en/3/35/Jumanji_Welcome_to_the_Jungle.jpg') center/cover no-repeat`;
      img.style.width='100px'; img.style.height='140px';
      img.style.margin='10px'; img.title=name;
      board.appendChild(img);
    });
    // Show letter first
    setTimeout(()=>letter.style.display='flex',500);
  }
}

function resetGame(){ createBoard(); }
function showLookDown(){ letter.style.display='none'; alert('Winner says: look downwards'); }

createBoard();
</script>

</body>
